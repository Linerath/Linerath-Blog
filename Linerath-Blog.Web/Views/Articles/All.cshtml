@model ArticlesSummariesViewModel

@{
    ViewBag.Title = "All articles";
}

@if (!Model.Articles.Any())
{
    if (Model.SearchText != null)
    {
        <div class="container">
            <div class="page-title mt-3">
                <h1>Ничего не найдено.</h1>
                <div>Попробуйте изменить запрос.</div>
                <div class="mt-3">
                    @Html.ActionLink(
                        "Все записи", "All", "Articles",
                        null,
                        new { @class = "btn btn-primary" }
                    )
                </div>
                <img src="https://media1.giphy.com/media/JIX9t2j0ZTN9S/giphy.gif" height="300" class="mt-4" />
            </div>
        </div>
    }
    else
    {
        <div class="container">
            <div class="text-center mt-5">
                <h1>Не записей.</h1>
            </div>
        </div>
    }
}
else
{
    foreach (var article in Model.Articles)
    {
        { Html.RenderPartial("ArticleSummaryPartial", (article, (BaseViewModel)Model)); }
    }

    @PaginationHelper.Pagination(
        Model.PaginationModel,
        x => Url.Action("All", "Articles", new { page = x, Model.Category, Model.SearchText })
    )
}
