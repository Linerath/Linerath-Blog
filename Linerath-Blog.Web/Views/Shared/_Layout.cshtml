<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Linerath-Blog</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link rel="icon" href="~/Content/Pics/favicon.png" />
</head>
<body>
    <nav class="navbar navbar-expand">
        @Html.ActionLink("Linerath Blog", "Home", "Main", new { }, new { @class = "navbar-brand" })
        <ul class="navbar-nav">
            <li>
                @Html.ActionLink("All articles", "All", "Articles")
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <span><a class="fa fa-github nav-link" target="_blank" href="https://github.com/Linerath"></a></span>
            </li>
        </ul>
    </nav>

    <content class="container-fluid">
        <div class="row main-row">
            <div class="col-md-2 p-0 mb-1 mb-md-0 menu menu-left">
                @Html.Action("MenuLeft", "Navigation")
            </div>
            <div class="col-md-8 p-0">
                <div class="ml-md-2 mr-md-2 main-content">
                    @RenderBody()
                </div>
            </div>
            <div class="col-md-2 p-0 d-none d-lg-block menu menu-right">
                @Html.Action("MenuRight", "Navigation")
            </div>
        </div>
    </content>
    <hr />
    <footer>
        <div>Linerath, @DateTime.Now.Year</div>
    </footer>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>