<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Linerath-Blog</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header class="navbar navbar-dark">
        @Html.ActionLink("Linerath Blog", "Home", "Main", new { }, new { @class = "navbar-brand" })
    </header>

    <content class="container-fluid">
        <div class="row main-row">
            <div class="col-2 p-0 menu menu-left">
                @{ Html.RenderPartial("MenuLeftPartial"); }
            </div>
            <div class="col-8 p-0">
                <div class="ml-1 mr-1 main-content">
                    @RenderBody()
                </div>
            </div>
            <div class="col-2 p-0 menu menu-right">
                @{ Html.RenderPartial("MenuRightPartial"); }
            </div>
        </div>
    </content>
    <hr />
    <footer></footer>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>