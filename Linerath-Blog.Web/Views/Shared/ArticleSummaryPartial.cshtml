@model Article

<div class="article-summ">
    @Html.ActionLink(Model.Title, "Article", "Articles", new { id = Model.Id, returnUri = Request.Url.PathAndQuery }, new { @class = "article-summ-title" })
    <div class="article-summ-header">
        <div class="article-summ-date">@Model.CreationDate.ToLongDateString()</div>
        <div class="article-summ-categories">
            <span>Категории:</span>
            @for (int i = 0; i < Model.Categories.Count(); i++)
            {
                if (i != Model.Categories.Count() - 1)
                {
                    @Html.ActionLink(Model.Categories[i].Name + ", ", "All", "Articles", new { page = 1, category = Model.Categories[i].Name }, new { })
                }
                else
                {
                    @Html.ActionLink(Model.Categories[i].Name, "All", "Articles", new { page = 1, category = Model.Categories[i].Name }, new { })
                }
            }
            @foreach (var category in Model.Categories)
            {
            }
        </div>
    </div>
    <p class="article-summ-body">@Model.Body</p>
</div>
